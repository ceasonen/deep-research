# ==============================
# AutoSearch AI configuration
# ==============================

# App
DEBUG=false
HOST=0.0.0.0
PORT=8000

# LLM provider options: openai, ollama, groq, together, custom
LLM_PROVIDER=openai
LLM_API_KEY=sk-your-key
LLM_BASE_URL=
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.2
LLM_MAX_TOKENS=1200

# Search engines: comma or JSON array
SEARCH_ENGINES=["duckduckgo"]
SEARCH_MAX_RESULTS=8
SEARCH_LANGUAGE=en
SEARCH_REGION=wt-wt
ARXIV_BASE_URL=http://export.arxiv.org/api/query
ARXIV_CATEGORIES=["cs.AI","cs.LG","cs.CL","cs.CV","stat.ML"]
ARXIV_MIN_INTERVAL_SECONDS=3.0
ARXIV_MAX_RESULTS=24

# Optional API keys for premium engines
GOOGLE_API_KEY=
GOOGLE_CX_ID=
BING_API_KEY=
BRAVE_API_KEY=

# Content pipeline
CONTENT_MAX_PAGES=6
CONTENT_MAX_LENGTH=3500
CONTENT_TIMEOUT=10

# Reranker
RERANKER_ENABLED=true
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2
RERANKER_TOP_K=5

# Cache
CACHE_ENABLED=true
CACHE_TTL=1800
CACHE_MAX_SIZE=1024

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
